<?xml version="1.0"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <add key="log4net.NullText" value="#" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <httpModules>
      <add name="Log4Net" type="log4net.Web.Log4NetHttpModule, log4net.HttpRequestAppender"/>
    </httpModules>
  </system.web>

  <system.webServer>
     <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>

  <log4net>
    <appender name="PerRequestWrapper" type="log4net.Appender.HttpRequestAppender">
      <appender-ref ref="LogFileAppender" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date %-5level %logger{1} %message" />
      </layout>
    </appender>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
      <param name="File" value="bin/Combined.log" />
      <param name="AppendToFile" value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date flsrv prd %level %property{searchid} %property{papakia} %property{brand} %property{language} %message%n"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="PerRequestWrapper" />
    </root>
  </log4net>

</configuration>
