<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <add key="log4net.NullText" value="#"/>
  </appSettings>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.5.2" />
      </system.Web>
  -->
  <system.web>
    <compilation debug="true" targetFramework="4.5.2"/>
  </system.web>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="Log4Net.HttpRequestAppender" type="log4net.Web.Log4NetHttpModule, log4net.HttpRequestAppender" preCondition="integratedMode" />
    </modules>
  </system.webServer>
  <log4net>
    <appender name="PerRequestWrapper" type="log4net.Appender.HttpRequestAppender">
      <appender-ref ref="LogFileAppender"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date %-5level %logger{1} %message"/>
      </layout>
    </appender>

    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="bin/Combined.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maximumFileSize value="10MB" />
      <maxSizeRollBackups value="20" />
      <staticLogFileName value="true" />
      <datePattern value=".yyyy-MM-dd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date flsrv prd %level %property{searchid} %property{papakia} %property{brand} %property{language} %message%n" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="PerRequestWrapper"/>
    </root>
  </log4net>
</configuration>